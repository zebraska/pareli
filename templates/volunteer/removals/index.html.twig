{% extends 'base.html.twig' %}

{% block title %}Hello RemovalsController!
{% endblock %}

{% block body %}
	{% include 'volunteer/menu/menu.html.twig' %}
	<div>
		<div class='row'>
			<div class='col-9'>
				<h1>Enlèvements</h1>
			</div>
			<div class='col-3 py-2'>
				<div class="d-grid">
					<button class='btn btn-primary' data-bs-toggle="modal" data-bs-target="#removalsModal">Ajouter une demande</button>
				</div>
			</div>
		</div>
		<hr/>
		<div class='table-title'>
			<div class='row'>
				<div class='col-2'>Date</div>
				<div class='col-2'>Ville</div>
				<div class='col-3'>Fournisseur</div>
				<div class='col-2'>Contact</div>
				<div class='col-3'>Commentaires</div>
			</div>
		</div>
		<hr/>
		<div class='table-content'>
			{% for i in 0..50 %}
				<div class='row table-content-line'>
					<div class='col-2'>12/08/2022</div>
					<div class='col-2'>MONNIERES</div>
					<div class='col-3'>DEPOTS La Malvineuse - Le Village Boucher</div>
					<div class='col-2'>0687802129</div>
					<div class='col-3'>1 palette</div>
				</div>
				<hr/>
			{% endfor %}
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="removalsModal" tabindex="-1" aria-labelledby="removalsModalLabel" aria-hidden="true" data-bs-backdrop="static">
		<div class="modal-dialog modal-dialog-centered modal-xl">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="removalsModalLabel">Ajouter une demande</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="mb-3">
						<label for="exampleFormControlInput1" class="form-label">Date</label>
						<input type="date" class="form-control" id="exampleFormControlInput1" placeholder="jj/mm/aaaa">
					</div>
					<div class="mb-3">
						<label for="exampleFormControlInput1" class="form-label">Fournisseur</label>
						<div class="row">
							<select class="selectpicker form-control border border-secondary" data-live-search="true" title="Sélectionner un fournisseur">
								<option data-tokens="choice1" data-content="<div><b>2LM</b></div><div>44690 La Haye Fouassière</div>">
									2LM
								</option>
								<option data-tokens="choice2" data-content="<div><b>A 3 Distrib sur le bd du Maine</b></div><div>49300 Cholet</div>">
									A 3 Distrib  sur le bd du Maine
								</option>
								<option data-tokens="choice3" data-content="<div><b>A D M R</b></div><div>44120 Vertou</div>">
									A D M R
								</option>
								<option data-tokens="choice4" data-content="<div><b>A.C.S Chantal (SARL)</b></div><div>44340 Bouguenais </div>">
									A.C.S Chantal (SARL)
								</option>
								<option data-tokens="choice5" data-content="<div><b>A.D Rembaud pièces détachées auto</b></div><div>85300 Challans</div>">
									A.D Rembaud pièces détachées auto
								</option>
							</select>
						</div>
					</div>
					<div class="mb-3">
						<label for="exampleFormControlTextarea1" class="form-label">Spécificités et estimations</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="6"></textarea>
					</div>
				</div>
				<hr/>
				<div class="row py-2">
					<div class='col-4'>
						<div class="d-grid">
							<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
						</div>
					</div>
					<div class='col-4'></div>
					<div class='col-4'>
						<div class="d-grid">
							<button type="button" class="btn btn-success">Valider</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
