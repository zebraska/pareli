{{ form_start(form) }}
<div class="modal-header">
{% if id == 0 %}
	<h5 class="modal-title" id="supplierModalLabel">Ajouter un enlèvement</h5>
{% else %}
	<h5 class="modal-title" id="supplierModalLabel">Modifier un enlèvement</h5>
{% endif %}
	
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div id='modal-body' class="modal-body p-0 m-0">
	<div class='row'>
	 	<div class='col-6 mb-3'>Fournisseur<br/><b>{{provider.name}}</b></div> 
		<div class='col-6 mb-3'>
			{{ form_label(form.dateRequest) }}
			{{ form_widget(form.dateRequest, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-12 mb-3'>
			{{ form_label(form.comment) }}
			{{ form_widget(form.comment, { 'attr': {'class': 'form-control border border-primary','rows':10} }) }}
		</div>
			
		<hr/>
	</div>
    <hr/>
    
    {% if lastRemovals is defined %}
    {% include 'volunteer/removals/modal/removalHistory.html.twig' %}
    {% endif %}
    
</div>
<hr/>
<div class="row py-2">
	<div class='col-3'>
		<div class="d-grid">
                    {% if returnButton %}
                        <button class="btn btn-dark ajax-link-action" action="{{path('app_volunteer_removal_getform',{'providerId':provider.id})}}" data-target-spinner='modal-content' data-spinner-type='2' data-bs-toggle='modal-content'><i class="fa-solid fa-arrow-left px-2"></i>Retour</button>
                    {% else %}
			<button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fermer</button>
                    {% endif %}
		</div>
	</div>
	<div class='col-6'></div>
	<div class='col-3'>
            <div class="d-grid">
			<button type="submit" class="btn btn-success container" data-spinner-type='1'>Valider</button>
                        {#{% if returnButton %}<div class="btn ajax-link-action" action="{{path('app_volunteer_removal_getform',{'providerId':provider.id})}}" data-target-spinner='modal-content' data-spinner-type='2' data-bs-toggle='modal-content'>valider</div>{% endif %}#}
            </div>                                    
        </div>
</div>
                    
{{ form_end(form) }}
