<div>
	<div class='row'>
		<div class='col-2 py-2'>
			<div class='border border-dark rounded p-0' style='height:5vh'>
				<h1 class='m-0 p-2 text-center'>
					<i class="fa-solid fa-box-open pr-2"></i>Fournisseurs</h1>
			</div>
		</div>
		<div class='col-5 pt-2'>
			<div id='input-search' class="input-group">
				{% include 'volunteer/provider/component/search.html.twig' %}
			</div>
		</div>
		<div class='col-2 py-2'>
			<div class='row'>
				<div id='select-filters' class='col-9'>
					{% include 'volunteer/provider/component/filter.html.twig' %}
				</div>
				<div class='col-3 d-grid'>
					<button action="{{path('app_volunteer_provider')}}" data-bs-toggle='tooltip' data-bs-title='Réinialiser les filtres' data-bs-placement="top" data-target-spinner='body-interface' data-spinner-type='1' class='btn btn-dark ajax-link-action'>
						<i class="fa-solid fa-rotate-right text-2 mt-1"></i>
					</button>
				</div>
			</div>
		</div>
		<div class='col-3 py-2'>
			<div class="d-grid">
				<button action="{{path('app_volunteer_provider_getform',{'type':'info'})}}" data-target-spinner='modal-content' data-spinner-type='2' class='btn btn-primary ajax-link-action' data-bs-toggle="modal" data-bs-target="#supplierModal">Ajouter un fournisseur</button>
			</div>
		</div>
	</div>
	<hr/>
	<div class='table-title'>
		<div class='row'>
			<div class='col-3'>Informations</div>
			<div class='col-3'>Contacts</div>
			<div class='col-3'>Commentaires</div>
			<div class='col-2'>Contenants</div>
			<div class='col-1'></div>
		</div>
	</div>
	<hr/>
	<div id='table-content'>
		{% include 'volunteer/provider/table/content.html.twig' %}
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="supplierModal" tabindex="-1" aria-labelledby="supplierModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-xl">
		<div id='modal-content' class="modal-content"></div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="supplierModalEdit" tabindex="-1" aria-labelledby="supplierModalEditLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="supplierModalEditLabel">Détail du fournisseur</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class='row'>
					<div class='col-12 mb-3'>
						<label for="exampleFormControlInput1" class="form-label">Nom</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value='2LM'>
					</div>
					<div class='col-12 mb-3'>
						<label for="exampleFormControlInput1" class="form-label">Adresse</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value='18 r du Patis ZI Nord'>
					</div>
					<div class='col-12 mb-3'>
						<label for="exampleFormControlInput1" class="form-label">Interlocuteur</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value="en face de l'usine LU">
					</div>
					<div class='col-3 mb-3'>
						<label for="exampleFormControlInput1" class="form-label">Repère</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value=''>
					</div>
					<div class='col-3 mb-3'>
						<label for="exampleFormControlInput1" class="form-label">CP</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value='44690'>
					</div>
					<div class='col-6 mb-3'>
						<label for="exampleFormControlInput1" class="form-label">Ville</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value='La Haye Fouassière'>
					</div>
					<div class="col-3 mb-3">
						<label for="exampleFormControlInput1" class="form-label">Téléphone 1</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value='02 40 54 82 50'>
					</div>
					<div class="col-3 mb-3">
						<label for="exampleFormControlInput1" class="form-label">Téléphone 2</label>
						<input type="text" class="form-control border border-primary" id="exampleFormControlInput1" value=''>
					</div>
					<div class="col-6 mb-3">
						<label for="exampleFormControlInput1" class="form-label">Type</label>
						<select class='form-control border border-primary'>
							<option>Administration</option>
							<option selected='true'>Entreprise</option>
							<option>Scolaire</option>
						</select>
					</div>
				</div>
			</div>
			<hr/>
			<div class="row py-2">
				<div class='col-3'>
					<div class="d-grid">
						<button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fermer</button>
					</div>
				</div>
				<div class='col-3'></div>
				<div class='col-3'>
					<div class="d-grid">
						<button type="button" class="btn btn-danger">Supprimer</button>
					</div>
				</div>
				<div class='col-3'>
					<div class="d-grid">
						<button type="button" class="btn btn-success">Modifier</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
