{% extends 'base.html.twig' %}

{% block title %}Hello SupplierController!
{% endblock %}

{% block body %}
	{% include 'volunteer/menu/menu.html.twig' %}
	<div>
		<div class='row'>
			<div class='col-9'>
				<h1>Fournisseurs</h1>
			</div>
			<div class='col-3 py-2'>
				<div class="d-grid">
					<button class='btn btn-primary' data-bs-toggle="modal" data-bs-target="#supplierModal">Ajouter un fournisseur</button>
				</div>
			</div>
		</div>
		<hr/>
		<div class='table-title'>
			<div class='row'>
				<div class='col-3'>Nom</div>
				<div class='col-4'>Adresse</div>
				<div class='col-2'>Tél 1</div>
				<div class='col-2'>Tél 2</div>
			</div>
		</div>
		<hr/>
		<div class='table-content'>
			{% for i in 0..50 %}
				<div class='row table-content-line'>
					<div class='col-3'>2LM</div>
					<div class='col-4'>18 r du  Patis   ZI Nord 44690 La Haye Fouassière</div>
					<div class='col-2'>02 40 54 82 50</div>
					<div class='col-2'></div>
				</div>
				<hr/>
			{% endfor %}
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="supplierModal" tabindex="-1" aria-labelledby="supplierModalLabel" aria-hidden="true" data-bs-backdrop="static">
		<div class="modal-dialog modal-dialog-centered modal-xl">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="supplierModalLabel">Ajouter un fournisseur</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class='row'>
						<div class='col-12 mb-3'>
							<label for="exampleFormControlInput1" class="form-label">Nom</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class='col-12 mb-3'>
							<label for="exampleFormControlInput1" class="form-label">Adresse</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class='col-3 mb-3'>
							<label for="exampleFormControlInput1" class="form-label">Repère</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class='col-3 mb-3'>
							<label for="exampleFormControlInput1" class="form-label">CP</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class='col-6 mb-3'>
							<label for="exampleFormControlInput1" class="form-label">Ville</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class="col-3 mb-3">
							<label for="exampleFormControlInput1" class="form-label">Téléphone 1</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class="col-3 mb-3">
							<label for="exampleFormControlInput1" class="form-label">Téléphone 2</label>
							<input type="text" class="form-control" id="exampleFormControlInput1">
						</div>
						<div class="col-6 mb-3">
							<label for="exampleFormControlInput1" class="form-label">Type</label>
							<select class='form-control border border-secondary'>
                                <option>Administration</option>
                                <option>Entreprise</option>
                                <option>Scolaire</option>
                            </select>
						</div>
					</div>
				</div>
				<hr/>
				<div class="row py-2">
					<div class='col-4'>
						<div class="d-grid">
							<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
						</div>
					</div>
					<div class='col-4'></div>
					<div class='col-4'>
						<div class="d-grid">
							<button type="button" class="btn btn-success">Valider</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
