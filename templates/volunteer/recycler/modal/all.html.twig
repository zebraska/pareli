{{ form_start(form) }}
<div class="modal-header">
{% if id == 0 %}
	<h5 class="modal-title" id="supplierModalLabel">Ajouter un recyleur</h5>
{% else %}
	<h5 class="modal-title" id="supplierModalLabel">Modifier un recyleur</h5>
{% endif %}
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div id='modal-body' class="modal-body p-0 m-0">
	<div class='row'>
		<p>
			<b>Informations générales</b>
		</p>
		<div class='col-12 mb-3'>
			{{ form_label(form.name) }}
			{{ form_widget(form.name, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-12 mb-3'>
			{{ form_label(form.address) }}
			{{ form_widget(form.address, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-6 mb-3'>
			{{ form_label(form.zipCode) }}
			{{ form_widget(form.zipCode, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-6 mb-3'>
			{{ form_label(form.city) }}
			{{ form_widget(form.city, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
	</div>
        <hr/>
        <div class='row'>
                <p>
			<b>Interlocuteur commercial</b>
		</p>
		<div class='col-4 mb-3'>
			{{ form_label(form.commercialContactName) }}
			{{ form_widget(form.commercialContactName, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-4 mb-3'>
			{{ form_label(form.commercialContactPhone) }}
			{{ form_widget(form.commercialContactPhone, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-4 mb-3'>
			{{ form_label(form.commercialContactMail) }}
			{{ form_widget(form.commercialContactMail, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
        </div>
        <hr/>
        <div class='row'>
                <p>
			<b>Autre interlocuteur</b>
		</p>
		<div class='col-3 mb-3'>
			{{ form_label(form.contactName) }}
			{{ form_widget(form.contactName, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-3 mb-3'>
			{{ form_label(form.contactTelOne) }}
			{{ form_widget(form.contactTelOne, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
                <div class='col-3 mb-3'>
			{{ form_label(form.contactTelTwo) }}
			{{ form_widget(form.contactTelTwo, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
		<div class='col-3 mb-3'>
			{{ form_label(form.contactMail) }}
			{{ form_widget(form.contactMail, { 'attr': {'class': 'form-control border border-primary'} }) }}
		</div>
        </div>
        
</div>
<hr/>
<div class="row py-2">
	<div class='col-3'>
		<div class="d-grid">
			<button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fermer</button>
		</div>
	</div>
	<div class='col-6'></div>
	<div class='col-3'>
		<div class="d-grid">
			<button type="submit" class="btn btn-success" data-spinner-type='1'>Valider</button>
		</div>
	</div>
</div>
{{ form_end(form) }}
