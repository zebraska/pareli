{{ form_start(form) }}
<div class="modal-header mb-3">            
                <h5 class="modal-title me-5" id="supplierModalLabel">Entrez l'intervalle d'export</h5>                
                {{ form_widget(form.completeSwitch, {'attr': {'class': 'form-check-input custom-control-input ms-5', 'type': 'checkbox'}})}}
                {{ form_label(form.completeSwitch) }}                        
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div id='modal-body' class="modal-body p-0 m-0">
    <div class='row'>
        <div class='col-6 mb-3'>
			{{ form_label(form.dateStart) }}
			{{ form_widget(form.dateStart, { 'attr': {'class': 'form-control border border-primary'} }) }}
        </div>
        <div class='col-6 mb-3'>
			{{ form_label(form.dateEnd) }}
			{{ form_widget(form.dateEnd, { 'attr': {'class': 'form-control border border-primary'} }) }}
        </div>
        <div class='col-6 mb-3'>
			{{ form_label(form.providerStart) }}
			{{ form_widget(form.providerStart, { 'attr': {'class': 'form-control border border-primary'} }) }}
        </div>
        <div class='col-6 mb-3'>
			{{ form_label(form.providerEnd) }}
			{{ form_widget(form.providerEnd, { 'attr': {'class': 'form-control border border-primary'} }) }}
        </div>
        <div class='col-12 mb-3'>
			{{ form_label(form.filterCertificate) }}
			{{ form_widget(form.filterCertificate, { 'attr': {'class': 'form-control border border-primary'} }) }}
        </div>
        <div class='col-12 mb-3'>
			{{ form_label(form.stateFilter) }}
			{{ form_widget(form.stateFilter, { 'attr': {'class': 'form-control border border-primary'} }) }}
        </div>
    </div>
</div>
<hr/>
<div class="row py-2">
	<div class='col-3'>
		<div class="d-grid">
			<button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fermer</button>                    
		</div>
	</div>
	<div class='col-6'></div>
	<div class='col-3'>
            <div class="d-grid">
                <button type="submit" class="btn btn-success container" data-spinner-type='1'>Valider</button>                       
            </div>                                    
        </div>
</div>                        
{{ form_end(form) }}